<% layout("layouts/boilerplate.ejs") %>

<body class="bg-white" style="font-family: 'Helvetica Neue', sans-serif;">
    <div class="container d-flex justify-content-center align-items-center py-5">
        <div class="w-100" style="max-width: 700px;">
            <h2 class="mb-4 fw-semibold text-center">Update Listing</h2>

            <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" name="title" value="<%= listing.title %>" placeholder="Add a catchy title" class="form-control rounded-3 shadow-sm border-light" required>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" id="description" name="description" value="<%= listing.description %>" placeholder="Enter a short description" class="form-control rounded-3 shadow-sm border-light" required>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload New image(optional)</label>
                    <input type="file" id="image" name="image" accept="image/*" class="form-control rounded-3 shadow-sm border-light">
                    <div class="valid-feedback">Image selected!</div>
                    <div class="invalid-feedback">Please upload an image file.</div>
                  </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" id="price" name="price" value="<%= listing.price %>" placeholder="e.g. 1200" class="form-control rounded-3 shadow-sm border-light" required>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" id="country" name="country" value="<%= listing.country %>" placeholder="e.g. India" class="form-control rounded-3 shadow-sm border-light" required>
                    </div>
                </div>

                <div class="mb-4">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" id="location" name="location" value="<%= listing.location %>" placeholder="e.g. Jaipur, Rajasthan" class="form-control rounded-3 shadow-sm border-light" required>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-danger btn-lg rounded-3 border-0" style="background-color: #FF385C;">
                        Update Listing
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
