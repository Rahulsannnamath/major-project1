<% layout("layouts/boilerplate.ejs") %>

<% if (error && error.length > 0) { %>
  <% error.forEach(msg => { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= msg %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% }) %>
<% } %>

<div class="signup-container">
  <!-- ðŸ‘¤ Unified Login Form -->
  <form class="signup-form" action="/users/login" method="POST">
    <h2 class="form-title">Login to Wandurlust</h2>

    <div class="form-group">
      <label for="username">Username</label>
      <input type="text" id="username" name="username" required placeholder="Your username">
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" id="password" name="password" required placeholder="Enter a password">
    </div>

    <button type="submit" class="submit-btn">Login</button>

    <div class="divider">
      <span>or</span>
    </div>

    <!-- Demo Login Button -->
    <button type="submit" class="submit-btn demo-btn" formaction="/users/login" formmethod="POST" name="demo" value="true"
      onclick="this.form.username.value='admin'; this.form.password.value='admin';">
      Demo Login
    </button>

    <p class="login-link">Don't have an account? <a href="/users/signup">Sign up</a></p>
  </form>
</div>
